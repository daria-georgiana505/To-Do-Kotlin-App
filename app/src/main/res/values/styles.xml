<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="to_do_textview">
        <item name="android:textSize">@dimen/text_dimen</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:fontFamily">@font/lemon_regular</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="sign_in_textview">
        <item name="android:textSize">@dimen/sign_in_dimen</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:fontFamily">@font/lemon_regular</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="small_textview">
        <item name="android:textSize">@dimen/small_text_dimen</item>
<!--        <item name="android:textColor">@color/grey</item>-->
        <item name="android:fontFamily">@font/lemon_regular</item>
    </style>
    <style name="CustomDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="task_text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/task_text_dimen</item>
        <item name="android:fontFamily">@font/lemon_regular</item>
    </style>
</resources>